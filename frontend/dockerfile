# STAGE 1: Builder (Compilazione)
FROM node:20-alpine AS builder

WORKDIR /app
# Installa dipendenze di sistema necessarie
RUN apk add --no-cache libc6-compat

COPY package.json package-lock.json* ./

# MODIFICA: Usiamo 'npm install' invece di 'npm ci'
# Questo risolve l'errore del lockfile non sincronizzato aggiornandolo al volo
RUN npm install

COPY . .

# Cattura l'argomento passato dal docker-compose
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

# Disabilita telemetria durante la build
ENV NEXT_TELEMETRY_DISABLED 1

# Compila l'applicazione per la produzione (crea la cartella .next)
RUN npm run build

# -------------------------------------------------------------------

# STAGE 2: Runner (Esecuzione)
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV production
ENV NEXT_TELEMETRY_DISABLED 1

# Crea un utente non-root per sicurezza (best practice)
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copia solo i file necessari dalla build precedente
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# Imposta i permessi corretti
USER nextjs

EXPOSE 3000
ENV PORT 3000

# Avvia il server di PRODUZIONE
CMD ["npm", "start"]